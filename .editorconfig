root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.sh]
indent_style = tab
tab_width = 4
indent_size = 4

[*.{tsx,ts}]
indent_style = space
indent_size = 4

[*.{pcss,css}]
indent_style = space
indent_size = 4

[package.json]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2
