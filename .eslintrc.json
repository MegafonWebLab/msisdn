{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "extends": ["./node_modules/@megafon/frontend-presets/eslint"],
    "rules": {
        "no-underscore-dangle": ["off"],
        "import/no-cycle": ["off"],
        "@typescript-eslint/consistent-type-imports": [
            "error",
            {
                "disallowTypeAnnotations": false
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"],
                "extensions": [".ts"]
            },
            "eslint-import-resolver-typescript": true
        }
    }
}
